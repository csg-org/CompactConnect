{
  "Statement": [
    {
      "Action": "dynamodb:CreateBackup",
      "Condition": {
        "StringNotEquals": {
          "aws:PrincipalServiceName": "dynamodb.amazonaws.com"
        }
      },
      "Effect": "Deny",
      "Principal": "*",
      "Resource": "*"
    },
    {
      "Action": [
        "dynamodb:BatchGetItem",
        "dynamodb:BatchWriteItem",
        "dynamodb:PartiQL*",
        "dynamodb:Scan"
      ],
      "Condition": {
        "StringNotEquals": {
          "aws:PrincipalServiceName": "dynamodb.amazonaws.com",
          "aws:PrincipalArn": [
            {
              "Fn::GetAtt": [
                "DisasterRecoveryLambdaRole4BDEAE6F",
                "Arn"
              ]
            }
          ]
        }
      },
      "Effect": "Deny",
      "Principal": "*",
      "Resource": "*"
    }
  ],
  "Version": "2012-10-17"
}
