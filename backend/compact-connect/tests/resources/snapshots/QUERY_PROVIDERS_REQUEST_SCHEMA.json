          "type": "string"
        },
        "pageSize": {
          "maximum": 100,
          "minimum": 5,
          "type": "integer"
        }
      },
      "type": "object"
    },
    "sorting": {
      "description": "How to sort results",
      "properties": {
        "key": {
          "description": "The key to sort results by",
          "enum": [
            "dateOfUpdate",
            "familyName"
          ],
          "type": "string"
        },
        "direction": {
          "description": "Direction to sort results by",
          "enum": [
            "ascending",
