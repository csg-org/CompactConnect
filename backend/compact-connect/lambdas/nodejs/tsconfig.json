{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "noImplicitAny": false,
        "lib": [
            "esnext",
            "scripthost"
        ],
        "typeRoots": [
          "./node_modules/@types"
        ]
    },
    "include": [
        "**/handler.ts",
        "lib/**/*.ts",
        "lib/**/*.tsx"
    ],
    "exclude": [
        "cdk.out",
        "node_modules"
    ]
}
